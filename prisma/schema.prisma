generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password Password?
}

model Password {
  id     String @id @default(uuid())
  hash   String // Hashed password
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @unique
}
